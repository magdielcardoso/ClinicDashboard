<% content_for :title, "New Client" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-4xl text-gray-900">New Client</h1>
    <%= link_to clients_path, class: "flex items-center space-x-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-md font-medium transition-colors duration-200" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      <span>Back to Clients</span>
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <%= render "form", client: @client %>
  </div>
</div>
