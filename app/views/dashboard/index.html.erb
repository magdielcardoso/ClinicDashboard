<div class="min-h-screen">
  <!-- Stats Cards -->
  <div class="mb-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-2">
      <!-- Total Clients -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Total de Clientes</p>
            <p class="text-2xl font-semibold text-gray-900"><%= Client.count %></p>
          </div>
        </div>
      </div>

      <!-- Total Appointments -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Total de Consultas</p>
            <p class="text-2xl font-semibold text-gray-900"><%= Appointment.count %></p>
          </div>
        </div>
      </div>

      <!-- Total Procedures -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Total de Procedimentos</p>
            <p class="text-2xl font-semibold text-gray-900"><%= Procedure.count %></p>
          </div>
        </div>
      </div>

      <!-- Today's Appointments -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Consultas Hoje</p>
            <p class="text-2xl font-semibold text-gray-900"><%= Appointment.where('DATE(scheduled_at) = ?', Date.current).count %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-2 mt-4">
      <!-- Recent Appointments -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Consultas Recentes</h3>
        </div>
        <div class="p-6">
          <% if Appointment.order(scheduled_at: :desc).limit(5).any? %>
            <div class="space-y-4">
              <% Appointment.order(scheduled_at: :desc).limit(5).each do |appointment| %>
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-sm font-medium text-gray-900"><%= appointment.client&.name || 'Cliente não encontrado' %></p>
                    <p class="text-sm text-gray-500"><%= appointment.scheduled_at&.strftime('%d/%m/%Y %H:%M') %></p>
                  </div>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    <%= appointment.procedure&.name || 'Procedimento não definido' %>
                  </span>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500 text-center py-4">Nenhuma consulta encontrada</p>
          <% end %>
        </div>
      </div>

      <!-- Recent Clients -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Clientes Recentes</h3>
        </div>
        <div class="p-6">
          <% if Client.order(created_at: :desc).limit(5).any? %>
            <div class="space-y-4">
              <% Client.order(created_at: :desc).limit(5).each do |client| %>
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-sm font-medium text-gray-900"><%= client.name %></p>
                    <p class="text-sm text-gray-500"><%= client.email %></p>
                  </div>
                  <span class="text-xs text-gray-400"><%= client.created_at.strftime('%d/%m/%Y') %></span>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500 text-center py-4">Nenhum cliente encontrado</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
