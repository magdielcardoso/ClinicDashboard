<%= form_with(model: appointment, class: "contents") do |form| %>
  <% if appointment.errors.any? %>
    <div id="error_explanation" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md mb-6">
      <h2 class="font-medium mb-2"><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>
      <ul class="list-disc ml-6 space-y-1">
        <% appointment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="space-y-4">
      <div class="space-y-2">
        <%= form.label :client_id, "Client", class: "block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :client_id, Client.all, :id, :full_name, 
            { prompt: "Select a client" }, 
            { class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{appointment.errors[:client_id].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}" } %>
        <% if appointment.errors[:client_id].any? %>
          <p class="text-sm text-red-600"><%= appointment.errors[:client_id].first %></p>
        <% end %>
      </div>

      <div class="space-y-2">
        <%= form.label :procedure_id, "Procedure", class: "block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :procedure_id, Procedure.all, :id, :name, 
            { prompt: "Select a procedure" }, 
            { class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{appointment.errors[:procedure_id].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}" } %>
        <% if appointment.errors[:procedure_id].any? %>
          <p class="text-sm text-red-600"><%= appointment.errors[:procedure_id].first %></p>
        <% end %>
      </div>

      <div class="space-y-2">
        <%= form.label :scheduled_at, "Date & Time", class: "block text-sm font-medium text-gray-700" %>
        <%= form.datetime_local_field :scheduled_at, 
            class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{appointment.errors[:scheduled_at].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}" %>
        <% if appointment.errors[:scheduled_at].any? %>
          <p class="text-sm text-red-600"><%= appointment.errors[:scheduled_at].first %></p>
        <% end %>
      </div>
    </div>

    <div class="space-y-4">
      <div class="space-y-2">
        <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :status, 
            options_for_select([
              ['Pending', 'pending'],
              ['Confirmed', 'confirmed'],
              ['Completed', 'completed'],
              ['Cancelled', 'cancelled']
            ], appointment.status), 
            { prompt: "Select status" }, 
            { class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{appointment.errors[:status].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}" } %>
        <% if appointment.errors[:status].any? %>
          <p class="text-sm text-red-600"><%= appointment.errors[:status].first %></p>
        <% end %>
      </div>

      <div class="space-y-2">
        <%= form.label :notes, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :notes, rows: 4, 
            class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{appointment.errors[:notes].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}" %>
        <% if appointment.errors[:notes].any? %>
          <p class="text-sm text-red-600"><%= appointment.errors[:notes].first %></p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mt-8 flex justify-end space-x-3">
    <% if appointment.persisted? %>
      <%= link_to "Cancel", @appointment, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= form.submit "Update Appointment", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <% else %>
      <%= link_to "Cancel", appointments_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= form.submit "Create Appointment", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <% end %>
  </div>
<% end %>
