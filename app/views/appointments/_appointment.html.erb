    <strong class="block font-medium mb-1">Client:</strong>
    <%= appointment.client_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Procedure:</strong>
    <%= appointment.procedure_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">User:</strong>
    <%= appointment.user_id %>
  </div>
  <div>
