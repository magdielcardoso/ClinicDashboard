<% content_for :title, "Appointment Details" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-6 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-4xl text-gray-900">Appointment Details</h1>
    <div class="flex space-x-3">
      <%= link_to edit_appointment_path(@appointment), class: "flex items-center space-x-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md font-medium transition-colors duration-200" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21.174 6.812a1 1 0 0 0-3.986-3.987L3.842 16.174a2 2 0 0 0-.5.83l-1.321 4.352a.5.5 0 0 0 .623.622l4.353-1.32a2 2 0 0 0 .83-.497z"/>
          <path d="m15 5 4 4"/>
        </svg>
        <span>Edit Appointment</span>
      <% end %>
      <%= button_to @appointment, method: :delete, class: "flex items-center space-x-2 px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-md font-medium transition-colors duration-200", data: { turbo_confirm: "Are you sure you want to delete this appointment?" } do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6"/>
          <path d="M3 6h18"/>
          <path d="M8 6V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
        </svg>
        <span>Delete Appointment</span>
      <% end %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <div class="flex items-center space-x-6 mb-8">
      <div class="w-20 h-20 bg-purple-100 rounded-full flex items-center justify-center">
        <svg class="w-10 h-10 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
      </div>
      <div>
        <h2 class="text-3xl font-bold text-gray-900 mb-2">
          <%= @appointment.client&.first_name %> <%= @appointment.client&.last_name %>
        </h2>
        <p class="text-lg text-gray-600"><%= @appointment.procedure&.name %></p>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-4">
        <div class="bg-gray-50 rounded-lg p-4">
          <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Appointment Information</h3>
          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <span class="text-gray-600">Date & Time:</span>
              <span class="font-medium text-gray-900">
                <%= @appointment.scheduled_at&.strftime('%d/%m/%Y %H:%M') %>
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-600">Status:</span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                <%= case @appointment.status&.downcase
                    when 'confirmed' then 'bg-green-100 text-green-800'
                    when 'pending' then 'bg-yellow-100 text-yellow-800'
                    when 'cancelled' then 'bg-red-100 text-red-800'
                    when 'completed' then 'bg-blue-100 text-blue-800'
                    else 'bg-gray-100 text-gray-800'
                    end %>">
                <%= @appointment.status&.titleize %>
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-600">Client:</span>
              <span class="font-medium text-gray-900">
                <%= @appointment.client&.first_name %> <%= @appointment.client&.last_name %>
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-600">Procedure:</span>
              <span class="font-medium text-gray-900"><%= @appointment.procedure&.name %></span>
            </div>
          </div>
        </div>
      </div>

      <div class="space-y-4">
        <div class="bg-gray-50 rounded-lg p-4">
          <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Additional Details</h3>
          <div class="space-y-3">
            <% if @appointment.notes.present? %>
              <div>
                <span class="text-gray-600">Notes:</span>
                <p class="text-gray-700 mt-1 leading-relaxed"><%= @appointment.notes %></p>
              </div>
            <% else %>
              <p class="text-gray-500 italic">No notes added</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
