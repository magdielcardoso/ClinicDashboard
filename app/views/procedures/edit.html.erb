<% content_for :title, "Edit Procedure" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-4xl text-gray-900">Edit Procedure</h1>
    <%= link_to @procedure, class: "flex items-center space-x-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-md font-medium transition-colors duration-200" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M2.062 12.348a1 1 0 0 1 0-.696 10.75 10.75 0 0 1 19.876 0 1 1 0 0 1 0 .696 10.75 10.75 0 0 1-19.876 0"/>
        <circle cx="12" cy="12" r="3"/>
      </svg>
      <span>View Procedure</span>
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <%= render "form", procedure: @procedure %>
  </div>
</div>
