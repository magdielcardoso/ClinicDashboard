<%= form_with(model: procedure, class: "contents") do |form| %>
  <% if procedure.errors.any? %>
    <div id="error_explanation" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md mb-6">
      <h2 class="font-medium mb-2"><%= pluralize(procedure.errors.count, "error") %> prohibited this procedure from being saved:</h2>
      <ul class="list-disc ml-6 space-y-1">
        <% procedure.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <div class="space-y-2">
      <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, 
          class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{procedure.errors[:name].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}" %>
      <% if procedure.errors[:name].any? %>
        <p class="text-sm text-red-600"><%= procedure.errors[:name].first %></p>
      <% end %>
    </div>

    <div class="space-y-2">
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, rows: 4, 
          class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{procedure.errors[:description].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}" %>
      <% if procedure.errors[:description].any? %>
        <p class="text-sm text-red-600"><%= procedure.errors[:description].first %></p>
      <% end %>
    </div>

    <div class="space-y-2">
      <%= form.label :price, class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :price, step: :any, 
          class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{procedure.errors[:price].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}" %>
      <% if procedure.errors[:price].any? %>
        <p class="text-sm text-red-600"><%= procedure.errors[:price].first %></p>
      <% end %>
    </div>
  </div>

  <div class="mt-8 flex justify-end space-x-3">
    <% if procedure.persisted? %>
      <%= link_to "Cancel", @procedure, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= form.submit "Update Procedure", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <% else %>
      <%= link_to "Cancel", procedures_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= form.submit "Create Procedure", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <% end %>
  </div>
<% end %>
